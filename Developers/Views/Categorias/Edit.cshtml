@model Developers.Models.Categoria
@{
    ViewData["Title"] = "Editar Categoria";
    Layout = "~/Views/Shared/_LayoutFarm.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>EDITAR CATEGORIA</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Categorias" asp-action="Edit" method="post">
                    <!-- Campo oculto para el ID de la categoría -->
                    <input type="hidden" asp-for="CategoriaId" />

                    <div class="form-group mb-2">
                        <label class="form-label">NOMBRE</label>
                        <input class="form-control" asp-for="CategoriaName" placeholder="Ingrese nombre de la Categoría" />
                        <span asp-validation-for="CategoriaName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label class="form-label">DESCRIPCIÓN</label>
                        <input class="form-control" asp-for="Descripcion" placeholder="Ingrese Descripción" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i>&nbsp; Guardar Cambios
                        </button>
                        <a asp-controller="Categorias" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


