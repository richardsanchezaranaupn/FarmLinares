@model Developers.Models.Proveedor
@{
    ViewData["Title"] = "Crear Proveedor";
    Layout = "~/Views/Shared/_LayoutFarm.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Nuevo Proveedor</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Proveedores" asp-action="Create" method="post" id="proveedorForm">
                    <!-- Campo para el nombre del proveedor -->
                    <div class="form-group mb-2">
                        <label class="form-label">NOMBRE</label>
                        <input class="form-control" asp-for="ProveedorName" placeholder="Ingrese nombre de Proveedor" />
                        <span asp-validation-for="ProveedorName" class="text-danger"></span>
                    </div>

                    <!-- Campo para el RUC -->
                    <div class="form-group mb-2">
                        <label class="form-label">RUC</label>
                        <input class="form-control" asp-for="Ruc" placeholder="Ingrese RUC" maxlength="11" />
                        <span asp-validation-for="Ruc" class="text-danger"></span>
                    </div>

                    <!-- Campo para la dirección -->
                    <div class="form-group mb-2">
                        <label class="form-label">DIRECCION</label>
                        <input class="form-control" asp-for="Direccion" placeholder="Ingrese Dirección" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <!-- Campo para el nombre de contacto -->
                    <div class="form-group mb-2">
                        <label class="form-label">NOMBRE DE CONTACTO</label>
                        <input class="form-control" asp-for="NombreContacto" placeholder="Ingrese nombre de contacto" />
                        <span asp-validation-for="NombreContacto" class="text-danger"></span>
                    </div>

                    <!-- Campo para el teléfono -->
                    <div class="form-group mb-2">
                        <label class="form-label">TELÉFONO</label>
                        <input class="form-control" asp-for="Telefono" placeholder="Ingrese número de teléfono" maxlength="15" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <!-- Campo para el correo electrónico -->
                    <div class="form-group mb-2">
                        <label class="form-label">CORREO ELECTRÓNICO</label>
                        <input class="form-control" asp-for="CorreoElectronico" placeholder="Ingrese correo electrónico" />
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>

                    <!-- Botones para guardar o cancelar -->
                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-floppy"></i>&nbsp; Guardar
                        </button>
                        <a asp-controller="Proveedores" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Validar el formulario antes de enviarlo
            $('#proveedorForm').submit(function (event) {
                var proveedorName = $('#ProveedorName').val().trim();
                var ruc = $('#Ruc').val().trim();
                var direccion = $('#Direccion').val().trim();
                var nombreContacto = $('#NombreContacto').val().trim();
                var telefono = $('#Telefono').val().trim();
                var correoElectronico = $('#CorreoElectronico').val().trim();

                // Validar que el nombre no esté vacío
                if (!proveedorName) {
                    event.preventDefault(); // Detiene el envío del formulario
                    alert("El nombre del proveedor es obligatorio.");
                    return;
                }

                // Validar si todos los campos están vacíos
                if (!ruc && !direccion && !nombreContacto && !telefono && !correoElectronico) {
                    event.preventDefault(); // Detiene el envío del formulario
                    alert("Por favor, complete al menos uno de los campos restantes: RUC, Dirección, Nombre de Contacto, Teléfono o Correo Electrónico.");
                }
            });
        });
    </script>
}

